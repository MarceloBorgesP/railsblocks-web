<div class='row wrapper'>
    <div class='col-lg-10'>
        <h3>Create Company</h3>
        <ol class='breadcrumb'>
            <li>
                <a href='/'>Home</a>
            </li>
            <li>
                <a>Companies</a>
            </li>
            <li class='active'>
                <strong>Create Company</strong>
            </li>
        </ol>
    </div>
    <div class='col-lg-2'></div>
</div>
<div class='wrapper wrapper-content'>
  <div class='row'>
    <div class='col-lg-7'>
      <div class=''>
        <h4>New Company</h4>
      </div>
      <br>
      <br>
      <form novalidate="novalidate" class="simple_form form-horizontal" id="" action="" method="post">
        <div class="form-group string required">
          <label class="col-sm-3 string required control-label" for="">
            <abbr title="Requerido">*</abbr> Name
          </label>
          <div class="col-sm-8">
            {{input value=model.name id="name" class="string required form-control"}}
          </div>
        </div>
        <div class='col-md-4 col-md-offset-7 text-right'>
          <button {{action 'save'}} id="save" class="btn btn-default btn-inverse">Submit</button>
        </div>
      </form>
    </div>
    <div class='col-lg-5 summary'>
      <h4>Summary</h4>
      <br>
      <div class="summary-group clearfix">
        <div class="summary-label col-sm-5">
          <span>Name</span> 
        </div>
        <div class="col-sm-7">
          <span>{{model.name}}</span> 
        </div>  
      </div>    
    </div>
  </div>
</div>